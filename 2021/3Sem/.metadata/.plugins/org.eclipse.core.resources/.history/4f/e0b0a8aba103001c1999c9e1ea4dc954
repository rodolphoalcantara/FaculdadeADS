    	List<Regiao> regioes = LeitorDeArquivos.leitorRegioes("assets/regioes.txt");
    	regioes.stream().forEach(regiao -> regiao.preenchaPibsEstados(estados));
    	
    	System.out.println(regioes.get(0).getEstados().get(0).getPib());
    	
